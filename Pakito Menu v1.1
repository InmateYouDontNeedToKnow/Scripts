-- ESP
-- =====================
function createESP(player)
    if espData[player] or not player.Character then return end
    local char = player.Character
    local root = char:WaitForChild("HumanoidRootPart")
    local hum = char:WaitForChild("Humanoid")

    local h = Instance.new("Highlight", char)
    h.Adornee = char
    h.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
    h.FillColor = Color3.fromRGB(180,100,255)
    h.OutlineColor = Color3.fromRGB(220,160,255)
    h.FillTransparency = 0.45
    h.OutlineTransparency = 0.15

    local bb = Instance.new("BillboardGui", root)
    bb.Size = UDim2.new(0,200,0,90)
    bb.StudsOffset = Vector3.new(0,4,0)
    bb.AlwaysOnTop = true

    local frame = Instance.new("Frame", bb)
    frame.Size = UDim2.new(1,0,1,0)
    frame.BackgroundTransparency = 0.65
    frame.BackgroundColor3 = Color3.fromRGB(30,20,50)
    Instance.new("UICorner", frame).CornerRadius = UDim.new(0,12)

    local name = Instance.new("TextLabel", frame)
    name.Size = UDim2.new(1,-10,0,25)
    name.Position = UDim2.new(0,5,0,5)
    name.BackgroundTransparency = 1
    name.Text = player.Name
    name.TextColor3 = Color3.new(1,1,1)
    name.Font = Enum.Font.GothamBold
    name.TextScaled = true

    local barBg = Instance.new("Frame", frame)
    barBg.Size = UDim2.new(0.9,0,0,10)
    barBg.Position = UDim2.new(0.05,0,0.45,0)
    barBg.BackgroundColor3 = Color3.fromRGB(50,50,60)
    Instance.new("UICorner", barBg).CornerRadius = UDim.new(1,0)

    local bar = Instance.new("Frame", barBg)
    bar.BackgroundColor3 = Color3.fromRGB(180,100,255)
    bar.Size = UDim2.new(1,0,1,0)
    Instance.new("UICorner", bar).CornerRadius = UDim.new(1,0)

    local dist = Instance.new("TextLabel", frame)
    dist.Size = UDim2.new(1,-10,0,20)
    dist.Position = UDim2.new(0,5,0.7,0)
    dist.BackgroundTransparency = 1
    dist.TextColor3 = Color3.fromRGB(220,220,240)
    dist.Font = Enum.Font.Gotham
    dist.TextSize = 14

    local conn = RunService.Heartbeat:Connect(function()
        if not esp or not root.Parent then conn:Disconnect() return end
        dist.Text = math.floor((root.Position - camera.CFrame.Position).Magnitude).." studs"
        bar.Size = UDim2.new(math.clamp(hum.Health/hum.MaxHealth,0,1),0,1,0)
    end)

    espData[player] = {highlight=h,billboard=bb,connection=conn}
end

for _,p in pairs(Players:GetPlayers()) do
    if p ~= lp then
        p.CharacterAdded:Connect(function() if esp then createESP(p) end end)
        if p.Character then createESP(p) end
    end
end

